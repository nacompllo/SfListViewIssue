<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"             
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White"
    x:Class="SfListViewIssue.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button 
                Text="Open Popup"
                TextColor="Black"
                FontSize="20"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Command="{Binding NavigateToPopupCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
